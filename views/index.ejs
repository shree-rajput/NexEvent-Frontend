<% layout('layouts/boilerplate') -%>
  <body>
    <!-- Hero Section -->
    <section id="home" class="hero">
      <div class="hero-content">
        <h1>Welcome to Event Management System</h1>
        <p>
          Manage your events, venues and attendees all in one place
        </p>
        <button
          class="btn btn-primary"
        >
          Get Started
        </button>
      </div>
    </section>

    <!-- Features Section -->
    <section class="features">
      <h2>Our Features</h2>
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-icon"><i class="fa-regular fa-calendar"></i></div>
          <h3>Event Management</h3>
          <p>Create, manage, and track all your events with ease</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon"><i class="fa-solid fa-people-line"></i></div>
          <h3>Attendee Management</h3>
          <p>Track attendees and manage registrations efficiently</p>
        </div>
        <div class="feature-card">
          <div class="feature-icon"><i class="fa fa-location-arrow" aria-hidden="true"></i></div>
          <h3>Venue Management</h3>
          <p>Browse and manage available venues for your events</p>
        </div>
        
    </section>
  </body>
</html>
